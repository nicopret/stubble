{
    "opts": {
        "destination": "./documentation",
        "encoding": "utf8",
        "recurse": true
    },
    "recurseDepth": 10,
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["bin/index.js", "bin/createServer", "bin/parseContract"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        }
    }
}